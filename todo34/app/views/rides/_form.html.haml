= form_for @ride, url: park_rides_path(@ride.park, @ride) do |f|
  - if @ride.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ride.errors.count, "error")} prohibited this ride from being saved:"
      %ul
        - @ride.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :park_id
    = f.number_field :park_id
  .actions
    = f.submit 'Save'
